<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mapper.TeacherMapper">
  	<select id="showTeacher" resultType="com.system.po.Teacher">
  		select * from teacher
  	</select>
  	<select id="findByUsername" resultType="com.system.po.Teacher">
  		select * from teacher where username = '${username}'
  	</select>
  	<select id="pageCourse" resultType="com.system.po.Teacher">
  		select * from teacher limit ${start},${pagesize}
  	</select>
  	  	<select id="findById" resultType="com.system.po.Teacher">
  		select * from teacher where userid=${tcr_id}
  	</select>
  	
  	<delete id="removeTeacher">
  		delete from teacher where userid=${tcr_id}
  	</delete>
 </mapper>