<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mapper.CourseMapper">
  	<select id="showCourse" resultType="com.system.po.Course">
  		select * from course
  	</select>
  	<select id="showElectiveCourse" resultType="com.system.po.Course">
  		select * from course where crs_attribute='选修'
  	</select>
  	<select id="pageElectiveCourse" resultType="com.system.po.Course">
  		select * from course where crs_attribute='选修'  limit ${start},${pagesize}
  	</select>
  	<select id="stu_showCourse" resultType="com.system.po.Course">
  		select * from course where crs_class='${crs_class}'
  	</select>
  	<select id="stu_showCourse1" resultType="com.system.po.Course">
		select * from course,student,momcourse where student.userid=${userid} and student.userid=momcourse.userid and course.crs_code = momcourse.crs_code
	</select>
  	<select id="selectCourse" resultType="com.system.po.Course">
  		select * from Course where crs_name='${crs_name}'
  	</select>
  	<select id="stu_selectCourse" resultType="com.system.po.Course">
  		select * from Course,Student,momcourse where course.crs_name='${crs_name}' and student.userid='${userid}' and momcourse.userid = student.userid and course.crs_code = momcourse.crs_code
  	</select>
  	<select id="findById" resultType="com.system.po.Course">
  		select * from Course where crs_id=${crs_id}
  	</select>
  	<select id="pageCourse" resultType="com.system.po.Course">
  		select * from Course limit ${start},${pagesize}
  	</select>
  	<select id="stu_pageCourse1" resultType="com.system.po.Course">
  		select * from Course,Student,momcourse where student.userid='${userid}' and momcourse.userid = student.userid and course.crs_code = momcourse.crs_code limit ${start},${pagesize}
  	</select>
  	<select id="admin_pageCourse" resultType="com.system.po.Course">
  		select * from Course where crs_name='${crs_name}' limit ${start},${pagesize}
  	</select>
  	<select id="stu_pageCourse" resultType="com.system.po.Course">
  		select * from Course,student,momcourse where course.crs_name='${crs_name}' and student.userid='${userid}' and momcourse.userid=student.userid and course.crs_code=momcourse.crs_code limit ${start},${pagesize}
  	</select>
  	<select id="schedule_Card" resultType="com.system.po.Course">
  		select * from Course where crs_class='${crs_class}' and crs_semester='${crs_semester}' 
  	</select>
  	<select id="showCrs_semester" resultType="com.system.po.Course">
  		select crs_semester from Course where crs_class='${crs_class}'
  	</select>
  	
  	
  	
  	<update id="editCourse">
  		update Course set crs_name='${crs_name}',crs_semester='${crs_semester}',crs_time='${crs_time}',crs_frequency='${crs_frequency}',crs_class='${crs_class}',crs_teacher='${crs_teacher}',crs_address='${crs_address}' where crs_code='${crs_code}'
  	</update>
  	<insert id="addCourse">
		insert into Course(crs_code,crs_name,crs_attribute,crs_credit,crs_semester,crs_time,crs_frequency,crs_class,crs_teacher,crs_address)values('${crs_code}','${crs_name}','${crs_attribute}','${crs_credit}','${crs_semester}','${crs_time}','${crs_frequency}','${crs_class}','${crs_teacher}','${crs_address}')
  	</insert>
  	<insert id="addElecctiveCourse">
		insert into Course(crs_code,crs_name,crs_attribute,crs_credit,crs_semester,crs_time,crs_frequency,crs_num,crs_teacher,crs_address)values('${crs_code}','${crs_name}','${crs_attribute}','${crs_credit}','${crs_semester}','${crs_time}','${crs_frequency}','${crs_num}','${crs_teacher}','${crs_address}')
  	</insert>
  	<delete id="removeCourse">
  		delete from Course where crs_id=${crs_id}
  	</delete>
 </mapper>