<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mapper.StudentMapper">
  	<select id="showStudent" resultType="com.system.po.Student">
  		select * from student
  	</select>
  	<select id="selectStudent" resultType="com.system.po.Student">
  		select * from student where username='${username}'
  	</select>
  	<select id="findById" resultType="com.system.po.Student">
  		select * from student where userid=${userid}
  	</select>
  	<select id="pageStudent" resultType="com.system.po.Student">
  		select * from student limit ${start},${pagesize}
  	</select>
  	<select id="stu_pageStudent" resultType="com.system.po.Student">
  		select * from student where username=${username} limit ${start},${pagesize}
  	</select>
  	<select id="findByStuClass" resultType="com.system.po.Student">
  		select * from student where stu_class='${stu_class}'
  	</select>
  	<select id="showClasses" resultType="com.system.po.Student">
  		select stu_class from student group by stu_class
  	</select>
  	
  	<update id="editStudent">
  		update student set username='${username}',sex='${sex}',birthyear='${birthyear}',gradeyear='${gradeyear}',college='${college}',stu_class='${stu_class}',account='${account}',passwd='${passwd}' where userid=${userid}
  	</update>
  	
  	<insert id="addStudent">
  		insert into student values(${userid},'${username}','${sex}','${birthyear}','${gradeyear}','${college}','${stu_class}','${account}','${passwd}')   		
  	</insert>
  	
  	<delete id="removeStudent">
  		delete from student where userid=${userid}
  	</delete>
 </mapper>